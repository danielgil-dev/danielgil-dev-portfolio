---
import Image from "astro/components/Image.astro";
import GitHubIcon from "../../assets/Icons/GitHubIcon.astro";
import LinkIcon from "../../assets/Icons/LinkIcon.astro";
import AngularIcon from "../../assets/Icons/AngularIcon.astro";
import SpringBootIcon from "../../assets/Icons/SpringBootIcon.astro";
import AstroIcon from "../../assets/Icons/AstroIcon.astro";
import TailwindIcon from "../../assets/Icons/TailwindIcon.astro";
import BootstrapIcon from "../../assets/Icons/BootstrapIcon.astro"

// Mapeo de nombres de iconos a componentes
const iconComponents = {
  AngularIcon,
  SpringBootIcon,
  AstroIcon,
  TailwindIcon,
  BootstrapIcon
};

// Define la interfaz de Props
interface Props {
  image: ImageMetadata;
  title: string;
  description: string;
  demoLink?: string;
  githubLink?: string;
  tags: Array<{
    name: string;
    icon: string; // Ahora es un string
  }>;
}

// Recibe las props
const { image, title, description, demoLink, githubLink, tags } = Astro.props;
---

<div class="max-w-md bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 hover:shadow-lg transition-shadow duration-300">
  <div class="overflow-hidden rounded-t-lg h-48">
    <img class="w-full h-full object-cover object-center" src={image.src} alt={title} />
  </div>
  
  <div class="p-5">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
      {title}
    </h5>
    
    <p class="mb-3 text-sm font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
    
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map(tag => {
          const IconComponent = iconComponents[tag.icon];
          return (
            <span class="flex items-center gap-1 bg-indigo-100 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-indigo-900 dark:text-indigo-300">
              {IconComponent && <IconComponent class="size-4" />}
              <span>{tag.name}</span>
            </span>
          );
        })}
      </div>
    )}
    
    <div class="flex justify-between mt-4">
      {githubLink && (
        <a
          href={githubLink}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-indigo-100 hover:bg-indigo-200 text-indigo-800 text-xs font-semibold p-2 rounded-md dark:bg-gray-700 dark:text-indigo-400 border border-indigo-400 inline-flex items-center gap-1 transition-colors"
        >
          <GitHubIcon class:list={"size-4"} />
          <span>GitHub</span>
        </a>
      )}
      
      {demoLink && (
        <a
          href={demoLink}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-sky-100 hover:bg-sky-200 text-sky-800 text-xs font-semibold p-2 rounded-md dark:bg-gray-700 dark:text-sky-400 border border-sky-400 inline-flex items-center gap-1 transition-colors"
        >
          <LinkIcon class:list={"size-4"} />
          <span>Demo</span>
        </a>
      )}
    </div>
  </div>
</div>
