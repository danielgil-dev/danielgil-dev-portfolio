---
import DevLogo from "../../assets/Icons/Dev.astro";
---

<header class="fixed top-0 left-0 right-0 z-50 bg-gray-900/90 backdrop-blur-sm border-b border-gray-800">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="group">
        <DevLogo darkMode={true} />
      </a>
      
      <nav class="hidden md:flex items-center space-x-8">
        <a href="#perfil" class="text-gray-300 hover:text-white transition-colors">Sobre mí</a>
        <a href="#tecnologias" class="text-gray-300 hover:text-white transition-colors">Tecnologías</a>
        <a href="#proyectos" class="text-gray-300 hover:text-white transition-colors">Proyectos</a>
        <a href="#educacion" class="text-gray-300 hover:text-white transition-colors">Educación</a>
        <a href="#contacto" class="text-gray-300 hover:text-white transition-colors">Contacto</a>
      </nav>
      
      <button class="md:hidden text-white" id="mobile-menu-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
        </svg>
      </button>
    </div>
    
    <!-- Menú móvil -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="#perfil" class="block px-3 py-2 text-white hover:bg-gray-800 rounded-md">Sobre mí</a>
        <a href="#tecnologias" class="block px-3 py-2 text-white hover:bg-gray-800 rounded-md">Tecnologías</a>
        <a href="#proyectos" class="block px-3 py-2 text-white hover:bg-gray-800 rounded-md">Proyectos</a>
        <a href="#contacto" class="block px-3 py-2 text-white hover:bg-gray-800 rounded-md">Contacto</a>
      </div>
    </div>
  </div>
</header>

<script>
  // Menú móvil toggle
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    
    button?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
    
    // Cerrar el menú al hacer clic en un enlace
    const mobileLinks = document.querySelectorAll('#mobile-menu a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        menu?.classList.add('hidden');
      });
    });
  });
</script>