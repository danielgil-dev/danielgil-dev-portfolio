---
import AngularIcon from "../../assets/Icons/AngularIcon.astro";
import SpringBootIcon from "../../assets/Icons/SpringBootIcon.astro";
import JavaScripIcon from "../../assets/Icons/JavaScriptIcon.astro";
import GitIcon from "../../assets/Icons/GitIcon.astro";
import MySqlIcon from "../../assets/Icons/MySqlIcon.astro";
import BootstrapIcon from "../../assets/Icons/BootstrapIcon.astro"
import TailwindIcon from "../../assets/Icons/TailwindIcon.astro"
import SwaggerIcon from "../../assets/Icons/SwaggerIcon.astro"
import PostmanIcon from "../../assets/Icons/PostmanIcon.astro"
import AstroIcon from "../../assets/Icons/AstroIcon.astro"
import DockerIcon from "../../assets/Icons/DockerIcon.astro"
const {id} = Astro.props;


const classList = "h-auto max-w-full rounded-lg size-40 py-3 m-0.5";
---

<style>
  .tech-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1rem;
    transition: transform 0.3s ease;
  }
  
  .tech-item:hover {
    transform: translateY(-5px);
  }
  
  .tech-item p {
    margin-top: 0.5rem;
    font-weight: 500;
    color: white;
  }
</style>

---
<h1 class="text-5xl font-extrabold py-2 m-2 text-center text-white">Tecnolog√≠as</h1>
<div data-section={id} class="flex items-center justify-center py-4 md:py-8 flex-wrap">
  <button
    type="button"
    class="text-blue-700 hover:text-white border border-blue-600 bg-white hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-full text-base font-medium px-5 py-2.5 text-center me-3 mb-3 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:bg-gray-900 dark:focus:ring-blue-800"
    >All categories</button
  >
  <button
    type="button"
    class="text-gray-900 border border-white hover:border-gray-200 dark:border-gray-900 dark:bg-gray-900 dark:hover:border-gray-700 bg-white focus:ring-4 focus:outline-none focus:ring-gray-300 rounded-full text-base font-medium px-5 py-2.5 text-center me-3 mb-3 dark:text-white dark:focus:ring-gray-800"
    >Front-End</button
  >
  <button
    type="button"
    class="text-gray-900 border border-white hover:border-gray-200 dark:border-gray-900 dark:bg-gray-900 dark:hover:border-gray-700 bg-white focus:ring-4 focus:outline-none focus:ring-gray-300 rounded-full text-base font-medium px-5 py-2.5 text-center me-3 mb-3 dark:text-white dark:focus:ring-gray-800"
    >Back-end</button
  >
  <button
    type="button"
    class="text-gray-900 border border-white hover:border-gray-200 dark:border-gray-900 dark:bg-gray-900 dark:hover:border-gray-700 bg-white focus:ring-4 focus:outline-none focus:ring-gray-300 rounded-full text-base font-medium px-5 py-2.5 text-center me-3 mb-3 dark:text-white dark:focus:ring-gray-800"
    >Tools</button
  >
</div>
<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
  <div class="tech-item">
    <AngularIcon class:list={classList} />
    <p>Angular</p>
  </div>
  <div class="tech-item">
    <SpringBootIcon class:list={classList} />
    <p>Spring Boot</p>
  </div>
  <div class="tech-item">
    <JavaScripIcon class:list={classList} />
    <p>JavaScript</p>
  </div>
  <div class="tech-item">
    <GitIcon class:list={classList} />
    <p>Git</p>
  </div>
  <div class="tech-item">
    <BootstrapIcon class:list={classList} />
    <p>Bootstrap</p>
  </div>
  <div class="tech-item">
    <MySqlIcon class:list={classList} />
    <p>MySQL</p>
  </div>
  <div class="tech-item">
    <TailwindIcon class:list={classList} />
    <p>Tailwind</p>
  </div>
  <div class="tech-item">
    <SwaggerIcon class:list={classList} />
    <p>Swagger</p>
  </div>
  <div class="tech-item">
    <PostmanIcon class:list={classList} />
    <p>Postman</p>
  </div>
  <div class="tech-item">
    <AstroIcon class:list={classList} />
    <p>Astro</p>
  </div>
  <div class="tech-item">
    <DockerIcon class:list={classList} />
    <p>Docker</p>
  </div>
</div>
