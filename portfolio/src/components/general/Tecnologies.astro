---
import AngularIcon from "../../assets/Icons/AngularIcon.astro";
import SpringBootIcon from "../../assets/Icons/SpringBootIcon.astro";
import JavaScripIcon from "../../assets/Icons/JavaScriptIcon.astro";
import GitIcon from "../../assets/Icons/GitIcon.astro";
import MySqlIcon from "../../assets/Icons/MySqlIcon.astro";
import BootstrapIcon from "../../assets/Icons/BootstrapIcon.astro"
import TailwindIcon from "../../assets/Icons/TailwindIcon.astro"
import SwaggerIcon from "../../assets/Icons/SwaggerIcon.astro"
import PostmanIcon from "../../assets/Icons/PostmanIcon.astro"
import AstroIcon from "../../assets/Icons/AstroIcon.astro"
import DockerIcon from "../../assets/Icons/DockerIcon.astro"
import SassIcon from "../../assets/Icons/SassIcon.astro"
import LinuxIcon from "../../assets/Icons/LinuxIcon.astro"
import TypeScriptIcon from "../../assets/Icons/TypeScriptIcon.astro"
import NodeIcon from "../../assets/Icons/NodeIcon.astro"
import HtmlIcon from  "../../assets/Icons/HtmlIcon.astro"

const {id} = Astro.props;

// Clase adaptativa para diferentes tamaños de pantalla
const classList = "h-auto w-full max-w-[80px] sm:max-w-[100px] md:max-w-[120px] py-2 sm:py-3";

// Array de tecnologías con categorías
const technologies = [
  { 
    name: "Angular", 
    icon: AngularIcon, 
    categories: ["frontend", "framework"] 
  },
  { 
    name: "Spring Boot", 
    icon: SpringBootIcon, 
    categories: ["backend", "framework"] 
  },
  { 
    name: "JavaScript", 
    icon: JavaScripIcon, 
    categories: ["frontend", "language"] 
  },
  { 
    name: "Git", 
    icon: GitIcon, 
    categories: ["tool", "devops"] 
  },
  { 
    name: "Bootstrap", 
    icon: BootstrapIcon, 
    categories: ["frontend", "framework"] 
  },
  { 
    name: "MySQL", 
    icon: MySqlIcon, 
    categories: ["backend", "database"] 
  },
  { 
    name: "Tailwind", 
    icon: TailwindIcon, 
    categories: ["frontend", "framework"] 
  },
  { 
    name: "Swagger", 
    icon: SwaggerIcon, 
    categories: ["tool", "api"] 
  },
  { 
    name: "Postman", 
    icon: PostmanIcon, 
    categories: ["tool", "api"] 
  },
  { 
    name: "Astro", 
    icon: AstroIcon, 
    categories: ["frontend", "framework"] 
  },
  { 
    name: "Docker", 
    icon: DockerIcon, 
    categories: ["devops", "tool"] 
  },
  { 
    name: "Sass", 
    icon: SassIcon, 
    categories: ["frontend", "language"] 
  },
  { 
    name: "TypeScript", 
    icon: TypeScriptIcon, 
    categories: ["frontend", "language", "backend"] 
  },
  { 
    name: "Linux", 
    icon: LinuxIcon, 
    categories: ["devops", "tool"] 
  },
  { 
    name: "Node.js", 
    icon: NodeIcon, 
    categories: ["backend", "runtime"] 
  },
  { 
    name: "HTML5", 
    icon: HtmlIcon, 
    categories: ["frontend", "language"] 
  }
];
---

<h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold py-4 sm:py-6 mb-2 sm:mb-4 text-center text-white">Tecnologías</h1>

<!-- Cuadrícula responsiva: 2 columnas en móvil, 3 en tablet, 4 en desktop, 5 en pantallas grandes -->
<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 sm:gap-5 md:gap-6 px-4 sm:px-6 md:px-8 mx-auto max-w-7xl mb-16">
  {technologies.map((tech, index) => (
    <div 
      class="tech-card flex flex-col items-center justify-center text-center p-4 sm:p-5 border border-gray-700 rounded-2xl sm:rounded-3xl bg-gray-800/50 backdrop-blur-sm hover:shadow-lg hover:shadow-teal-500/20"
      style={`animation-delay: ${index * 0.05}s`}
    >
      <tech.icon class:list={classList} />
      <p class="mt-2 sm:mt-3 text-sm sm:text-base font-medium text-white">{tech.name}</p>
    </div>
  ))}
</div>

<style>
  .tech-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s ease forwards;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .tech-card:hover {
    transform: translateY(-8px);
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

