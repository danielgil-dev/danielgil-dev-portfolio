const {id} = Astro.props;

// Clase adaptativa para diferentes tamaños de pantalla
const classList = "h-auto w-full max-w-[80px] sm:max-w-[100px] md:max-w-[120px] py-2 sm:py-3";

// Array de tecnologías con categorías
const technologies = [
  { 
    name: "Angular", 
    icon: AngularIcon, 
   
  },
  { 
    name: "Spring Boot", 
    icon: SpringBootIcon,  
  },
  { 
    name: "JavaScript", 
    icon: JavaScripIcon, 
 
  },
  { 
    name: "Git", 
    icon: GitIcon, 
 
  },
  { 
    name: "Bootstrap", 
    icon: BootstrapIcon, 
   
  },
  { 
    name: "MySQL", 
    icon: MySqlIcon, 
 
  },
  { 
    name: "Tailwind", 
    icon: TailwindIcon, 
   
  },
  { 
    name: "Swagger", 
    icon: SwaggerIcon, 
   
  },
  { 
    name: "Postman", 
    icon: PostmanIcon, 
   
  },
  { 
    name: "Astro", 
    icon: AstroIcon, 
   
  },
  { 
    name: "Docker", 
    icon: DockerIcon, 
 
  },
  { 
    name: "Sass", 
    icon: SassIcon, 
 
  },
  { 
    name: "TypeScript", 
    icon: TypeScriptIcon, 
  
  },
  { 
    name: "Linux", 
    icon: LinuxIcon, 
 
  },
  { 
    name: "Node.js", 
    icon: NodeIcon, 
   
  },
  { 
    name: "HTML5", 
    icon: HtmlIcon, 
 
  },
  {
    name: "CSS",
    icon: CssIcon
  },
  {
    name: "Power Apps",
    icon: PowerAppsIcon
  },
  {
    name: "Power Automate",
    icon : PowerAutomateIcon
  },
  {
    name: "Power Bi",
    icon : PowerBiIcon
  }
];
---

<h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold py-4 sm:py-6 mb-2 sm:mb-4 text-center text-indigo-900 dark:text-white transition-colors">Tecnologías</h1>

<!-- Cuadrícula responsiva: 2 columnas en móvil, 3 en tablet, 4 en desktop, 5 en pantallas grandes -->
<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 sm:gap-5 md:gap-6 px-4 sm:px-6 md:px-8 mx-auto max-w-7xl mb-16">
  {technologies.map((tech, index) => (
    <div 
      class="tech-card flex flex-col items-center justify-center text-center p-4 sm:p-5 border border-gray-200 dark:border-gray-700 rounded-2xl sm:rounded-3xl bg-gray-100 dark:bg-gray-800/80 backdrop-blur-sm hover:shadow-lg hover:shadow-indigo-500/20 dark:hover:shadow-indigo-500/10 transition-colors duration-300"
      style={`animation-delay: ${index * 0.05}s`}
    >
      <tech.icon class:list={classList} />
      <p class="mt-2 sm:mt-3 text-sm sm:text-base font-medium text-gray-900 dark:text-white transition-colors">{tech.name}</p>
    </div>
  ))}
</div>

<style>
  .tech-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s ease forwards;
    transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease, border-color 0.3s ease;
  }
  
  .tech-card:hover {
    transform: translateY(-8px);
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

