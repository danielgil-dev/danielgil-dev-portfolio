---
import AngularIcon from "../../assets/Icons/AngularIcon.astro";
import SpringBootIcon from "../../assets/Icons/SpringBootIcon.astro";
import JavaScripIcon from "../../assets/Icons/JavaScriptIcon.astro";
import GitIcon from "../../assets/Icons/GitIcon.astro";
import MySqlIcon from "../../assets/Icons/MySqlIcon.astro";
import BootstrapIcon from "../../assets/Icons/BootstrapIcon.astro"
import TailwindIcon from "../../assets/Icons/TailwindIcon.astro"
import SwaggerIcon from "../../assets/Icons/SwaggerIcon.astro"
import PostmanIcon from "../../assets/Icons/PostmanIcon.astro"
import AstroIcon from "../../assets/Icons/AstroIcon.astro"
import DockerIcon from "../../assets/Icons/DockerIcon.astro"
import SassIcon from "../../assets/Icons/SassIcon.astro"
import LinuxIcon from "../../assets/Icons/LinuxIcon.astro"
import TypeScriptIcon from "../../assets/Icons/TypeScriptIcon.astro"
import NodeIcon from "../../assets/Icons/NodeIcon.astro"
import HtmlIcon from  "../../assets/Icons/HtmlIcon.astro"
import CssIcon from "../../assets/Icons/CssIcon.astro"
import PowerAppsIcon from "../../assets/Icons/PowerAppsIcon.astro"
import PowerAutomateIcon from "../../assets/Icons/PowerAutomateIcon.astro"
import PowerBiIcon from "../../assets/Icons/PowerBiIcon.astro"


const {id} = Astro.props;

// Configuración de tamaño responsivo para los iconos
const iconClass = "h-16 w-16 sm:h-[70px] sm:w-[70px] md:h-20 md:w-20";

const technologies = [
  { 
    name: "Angular", 
    icon: AngularIcon 
  },
  { 
    name: "Spring Boot", 
    icon: SpringBootIcon
  },
  { 
    name: "JavaScript", 
    icon: JavaScripIcon
 
  },
  { 
    name: "Git", 
    icon: GitIcon
 
  },
  { 
    name: "Bootstrap", 
    icon: BootstrapIcon
   
  },
  { 
    name: "MySQL", 
    icon: MySqlIcon
 
  },
  { 
    name: "Tailwind", 
    icon: TailwindIcon
   
  },
  { 
    name: "Swagger", 
    icon: SwaggerIcon
   
  },
  { 
    name: "Postman", 
    icon: PostmanIcon
   
  },
  { 
    name: "Astro", 
    icon: AstroIcon
   
  },
  { 
    name: "Docker", 
    icon: DockerIcon
 
  },
  { 
    name: "Sass", 
    icon: SassIcon
 
  },
  { 
    name: "TypeScript", 
    icon: TypeScriptIcon
  
  },
  { 
    name: "Linux", 
    icon: LinuxIcon
 
  },
  { 
    name: "Node.js", 
    icon: NodeIcon
   
  },
  { 
    name: "HTML5", 
    icon: HtmlIcon
 
  },
  {
    name: "CSS",
    icon: CssIcon
  },
  {
    name: "Power Apps",
    icon: PowerAppsIcon
  },
  {
    name: "Power Automate",
    icon : PowerAutomateIcon
  },
  {
    name: "Power Bi",
    icon : PowerBiIcon
  }
];
---

<h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold py-4 sm:py-6 mb-2 sm:mb-4 text-center">
  <span class="relative inline-block">
    <span class="relative z-10 bg-gradient-to-r from-indigo-600 to-indigo-400 dark:from-indigo-500 dark:to-indigo-300 bg-clip-text text-transparent">Tecnologías</span>
    <span class="absolute left-0 bottom-1.5 sm:bottom-2 md:bottom-3 w-full h-3 md:h-4 bg-yellow-300/30 dark:hidden -rotate-1 rounded shadow-sm"></span>
  </span>
</h2>

<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 sm:gap-5 md:gap-6 px-4 sm:px-6 md:px-8 mx-auto max-w-7xl">
  {technologies.map((tech, index) => (
    <div 
      class="opacity-0 animate-fade-in flex flex-col items-center justify-between text-center p-4 m-1 sm:p-5 border border-gray-200 dark:border-gray-700 rounded-2xl sm:rounded-3xl bg-gray-100 dark:bg-gray-800/80 backdrop-blur-sm hover:shadow-lg hover:shadow-indigo-500/20 dark:hover:shadow-indigo-500/10 transition-all duration-500 hover:-translate-y-6 transform h-[160px] sm:h-[180px] md:h-[200px]"
      style={`animation-delay: ${index * 0.08}s`}
    >
      <div class="flex items-center justify-center w-full h-[70px] sm:h-[90px] md:h-24">
        <tech.icon class={iconClass} />
      </div>
      <p class="mt-auto text-sm sm:text-base font-medium text-gray-900 dark:text-white transition-colors">{tech.name}</p>
    </div>
  ))}
</div>

