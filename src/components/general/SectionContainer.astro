---
interface Props {
  id: string;
  className?: string;
  fullWidth?: boolean;
}

const {
  id, 
  className = "",
  fullWidth = false
} = Astro.props;
---

<section
  id={id}
  data-section={id}
  class={`section py-10 md:py-16 transition-colors duration-300 scroll-mt-20 m-0 text-gray-900 dark:text-white ${className}`}
>
  <div class={`${fullWidth ? 'w-full' : 'container mx-auto px-4 md:px-6 lg:px-8'}`}>
    <slot />
  </div>
</section>